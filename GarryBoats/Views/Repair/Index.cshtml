@model IEnumerable<GarryBoats.Models.RepairListItem>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RepairDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RepairDetails)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RepairDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RepairDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedUtc)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.RepairId  }) |
                @Html.ActionLink("Details", "Details", new {  id=item.RepairId }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.RepairId  })
            </td>
        </tr>
    }
</table>
