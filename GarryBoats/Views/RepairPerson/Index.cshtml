@model IEnumerable<GarryBoats.Models.RepairPersonList>
@{
    ViewBag.Title = " Index ";
}

<h2>Repair Person Index</h2>

<p>
    @Html.ActionLink("Create New Repair Person", "Create")
</p>


@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RepairPersonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RepairPersonLocation)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RepairPersonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RepairPersonLocation)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RepairPersonId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RepairPersonId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RepairPersonId })
            </td>
        </tr>
    }

</table>
